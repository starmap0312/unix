# attach to a screen environment
  screen      ==> start a screen session, by default screen launches ordinary (non-login) shells
  edit .screenrc: shell -$SHELL

# detach from a screen environment
  Ctrl + a, d

# re-attach to a screen environment
  screen -r

# list all screen environments
  screen -ls

# scroll up
  Ctrl+a [      # enter crollback/copy mode
  Ctrl+a ]      # to leave this mode 

# kill an attached screen
screen -X -S 23625 quit
